---
export interface Props {
  image: string;       // cover art URL (kept for compatibility)
  title: string;       // episode title
  description: string; // short summary
  season: string;      // season number
  episode: string;     // episode number
}

const { title, description, season, episode } = Astro.props;
---

<article class="group relative w-full max-w-2xl overflow-hidden rounded-2xl bg-white/5 p-4 shadow-lg backdrop-blur">
  <div class="flex flex-col space-y-2">
    <div class="flex items-baseline gap-2">
      <span class="text-xs text-white/50">S{season}E{episode}</span>
      <h2 class="text-lg font-semibold text-white/90 group-hover:text-white">{title}</h2>
    </div>
    <p class="text-xs text-white/60 line-clamp-2">{description}</p>
  </div>
</article>
